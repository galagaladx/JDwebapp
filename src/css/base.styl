*
::before
::after
    margin 0
    padding 0
    -webkit-tap-highlight-color transparent
    box-sizing border-box
body
  font-size 14px
  color #000
a
  text-decoration none
  color #000
ul
  list-style none
input
textarea
  border none
  resize none
  outline none
  appearance: none

.clearfix::before
.clearfix::after
  content " "
  display block
  height 0
  line-height 0
  visibility hidden
  clear both

[class^="icon-"]
[class$=" icon-"]
  background: url("../images/sprites.png") no-repeat
  background-size 200px 200px

.jd-topbar
  position: absolute
  z-index: 1000
  width 100%
  height 45px
  border-bottom 1px solid #e0e0e0
  background: url('../images/header-bg.png') repeat-x
  background-size 1px 44px
  .icon-back
    position absolute
    top 0
    left 0
    display block
    width 20px
    height 20px
    margin 12px 10px
    background-position -20px 0;
  .icon-menu
    position absolute
    top 0
    right 0
    display block
    width 40px
    height 44px
    padding 12px 10px
    background-position -60px 0
    background-clip content-box
    background-origin content-box
  form
    width 100%
    height 44px
    padding 0 40px
    input
      width 100%
      height 32px
      margin-top 6px
      border 1px solid #dfdfdf
      border-radius 5px
  h3
    line-height 45px
    text-align center
    font-size 16px
    font-weight inherit