/* 满屏有两种设置方式
    1. html设置为100%
    2.body脱离标准文档流
*/
@import './base.styl';

body
  position absolute
  height 100%
  width 100%
  background #fff
.jd-category
  position absolute
  width 100%
  height 100%
  padding-top 45px
  .jd-category-left
    position absolute
    top 0
    left 0
    width 90px
    height 100%
    padding-top 45px
    overflow hidden
    li
      width 90px
      height 50px
      background-color #f3f4f6
      a
       display block
       width 90px
       height 50px
       line-height 50px
       font-size 12px
       text-align center
       border-right 1px solid #e0e0e0
       border-bottom 1px solid #e0e0e0
    li.now
      background-color #fff
      a
        border-right none
        color #f15553
  .jd-category-right
    width 100%
    height 100% 
    padding-left 90px
    overflow hidden
    .jd-category-right-box
      padding 10px 12px
      .banner
        width 100%
        img
          width 100%
      .products
        margin-top 20px
        font-size 12px
        h3
          margin-bottom 10px
          color #888
        li
          float left
          width 33.333%
          text-align center
          margin-bottom 5px
          img
            display block
            height 62px
            width 62px
            margin 0 auto
